<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <include
        android:id="@+id/main_toolbar"
        layout="@layout/toolbar_main_layout" />


    <RelativeLayout
        android:id="@+id/rel_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50">

        <ImageView
            android:id="@+id/success_Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/confirm" />

        <TextView
            android:id="@+id/successTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/success_Img"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/d_din_font"
            android:padding="10dp"
            android:text="Payment Successful!"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/successpayemnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/successTitle"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/d_din_font"
            android:padding="10dp"
            android:text="Your payment was Successfull"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/successtransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/successpayemnt"

            android:fontFamily="@font/d_din_font"
            android:padding="10dp"
            android:text="Transaction Number :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/successtransaction_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/successpayemnt"
            android:layout_toRightOf="@+id/successtransaction"
            android:fontFamily="@font/d_din_font"
            android:padding="10dp"
            android:text="576546546546546"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/successtotalamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/successtransaction"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:fontFamily="@font/d_din_font_bold"
            android:padding="10dp"
            android:text="Total Amount:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/successamount_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/successtransaction"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@+id/successtotalamount"
            android:fontFamily="@font/d_din_font_bold"
            android:padding="10dp"
            android:text="$ 300"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_rounded_green"
        android:fontFamily="@font/d_din_font"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:padding="10dp"
        android:text="Back to Dashboard"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_another_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_above="@+id/btn_dashboard"
        android:backgroundTint="@color/black"
        android:background="@drawable/btn_rounded_green"
        android:fontFamily="@font/d_din_font"
        android:gravity="center"
        android:padding="10dp"
        android:text="Make Another Payment"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>